<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_h"
    android:orientation="vertical">


    <Button
        android:id="@+id/textplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_rojo"
        android:text="Empezar"
        android:textColor="@color/cardview_light_background"  android:layout_below="@+id/imageSplash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"/>



    <ImageView
        android:id="@+id/imageSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/frame11"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>